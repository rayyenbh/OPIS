<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.Page2Controller" prefWidth="600" prefHeight="400">
    <!-- Blue Region for the top of the page -->
    <top>
        <StackPane prefHeight="100" style="-fx-background-color: #0056b3;" alignment="CENTER">
            <!-- Image at top -->
            <ImageView fitHeight="100" fitWidth="200" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="file:/C:/Users/Admin/Downloads/Logo-COFICAB-white-300x83.png"/>
                </image>
            </ImageView>
        </StackPane>
    </top>

    <!-- Center region -->
    <center>
        <VBox spacing="20" alignment="CENTER">
            <!-- Workers List -->
            <HBox fx:id="workersList" spacing="20" alignment="CENTER">
                <!-- Worker buttons will be added here dynamically -->
            </HBox>

            <!-- Add Worker Button -->
            <VBox alignment="CENTER" spacing="10">
                <ImageView fx:id="addWorkerImage" fitHeight="200" fitWidth="200" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="file:/C:/Users/Admin/Downloads/feature.png"/>
                    </image>
                </ImageView>
                <Button text="Add Worker" onAction="#handleAddWorker"/>
                <Button text="Back" onAction="#handleBackButton"/>
            </VBox>
        </VBox>
    </center>
</BorderPane>

